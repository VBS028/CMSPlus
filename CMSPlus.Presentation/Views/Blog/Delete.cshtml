@model CMSPlus.Domain.Models.TopicModels.BlogEditViewViewModel

@{
    Layout = "_Layout";
}
<partial name="_RichTextEditorPartial"/>
@using (Html.BeginForm("Delete", "Blog",FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control"></input>
        <label asp-for="Title" class="m-1"></label>
        <input disabled asp-for="Title" class="form-control"></input>
        <label asp-for="Body" class="m-1"></label>
        <div class="row-12 mx-3">
            <p class="fs-6">@Html.Raw(Model.Body)</p>
        </div>
        <label asp-for="SystemName" class="m-1"></label>
        <input disabled asp-for="SystemName" class="form-control"></input>
    </div>
    <div class="row">
        <div class="col-6 text-start">
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">Back to list</a>
        </div>
    </div>
}
